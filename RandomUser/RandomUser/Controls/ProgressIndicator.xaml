<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RandomUser.Controls.ProgressIndicator"
             HorizontalOptions="FillAndExpand"
             VerticalOptions="FillAndExpand"
             BackgroundColor="#B0000000">
  <ContentView.Content>
        <Frame  HasShadow="False" Padding="10" HorizontalOptions="Center" VerticalOptions="Center">
            <ActivityIndicator Color="#1976D2" IsRunning="{Binding IsBusy}" />
        </Frame>
    </ContentView.Content>
</ContentView>